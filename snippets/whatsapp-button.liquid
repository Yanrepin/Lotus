<div class="whatsapp-logo">
  <a
    href="https://wa.me/{{ settings.whatsapp_number | url_encode }}?text={{ settings.whatsapp_message | url_encode }}"
    target="_blank"
    class="whatsapp-button {{ settings.whatsapp_position }}"
    aria-label="Chat with us on WhatsApp"
    tabindex="0"
  >
    <span class="sr-only">Chat with us on WhatsApp</span>
  </a>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const whatsappLogo = document.querySelector(".whatsapp-logo");

    if (whatsappLogo) {
      const isDesktop = window.innerWidth > 1024;
      const showOnDesktop = {{ settings.whatsapp_show_desktop | json }};
      const showOnMobile = {{ settings.whatsapp_show_mobile | json }};

      if ((isDesktop && !showOnDesktop) || (!isDesktop && !showOnMobile)) {
        whatsappLogo.style.display = "none";
      }
    }
  });
</script>

<style>
  .whatsapp-button {
    position: fixed;
    width: 50px;
    height: 50px;
    background: url({{ settings.whatsapp_logo | default: 'https://raw.githubusercontent.com/Yanrepin/dawn/refs/heads/main/assets/defualt_whatsapp_logo.webp' }});
    background-size: contain;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
  }

  /* Visually hidden text for screen readers */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }

  .right-top {
    right: calc(0% + {{ settings.whatsapp_margin_right }}%);
    top: calc(0% + {{ settings.whatsapp_margin_top }}%);
  }
  .left-top {
    left: calc(0% + {{ settings.whatsapp_margin_left }}%);
    top: calc(0% + {{ settings.whatsapp_margin_top }}%);
  }
  .right-bottom {
    right: calc(0% + {{ settings.whatsapp_margin_right }}%);
    bottom: calc(0% + {{ settings.whatsapp_margin_bottom }}%);
  }
  .left-bottom {
    left: calc(0% + {{ settings.whatsapp_margin_left }}%);
    bottom: calc(0% + {{ settings.whatsapp_margin_bottom }}%);
  }
</style>
