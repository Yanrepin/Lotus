<div class="whatsapp-logo">
  <a
    href="https://wa.me/{{ settings.whatsapp_number | url_encode }}?text={{ settings.whatsapp_message | url_encode }}"
    target="_blank"
    class="whatsapp-button {{ settings.whatsapp_position }}"
  >
  </a>
</div>

<script>
  if(window.innerWidth > 1024 && {{ settings.whatsapp_show_desktop | json }} === false && document.querySelector(".whatsapp-logo")) {
      document.querySelector(".whatsapp-logo").style.display = "none";
  }
  else if(window.innerWidth < 1024 && {{ settings.whatsapp_show_mobile | json }} === false && document.querySelector(".whatsapp-logo"))
    {
        document.querySelector(".whatsapp-logo").style.display = "none";
    }
</script>

<style>
  .whatsapp-button{
      position:absolute;
      width:50px;
      height:50px;
      background:url({{ settings.whatsapp_logo | image_url }});
      background-size: contain;
      background-repeat: no-repeat;
      display: block;
      z-index: 100;
  }
  .right-top{
      right:calc(0% + {{ settings.whatsapp_margin_right }}%);
      top:calc(0% + {{ settings.whatsapp_margin_top }}%);
  }
  .left-top{
      left:calc(0% + {{ settings.whatsapp_margin_left }}%);
      top:calc(0% + {{ settings.whatsapp_margin_top }}%);
  }
  .right-bottom{
      right:calc(0% + {{ settings.whatsapp_margin_right }}%);
      bottom:calc(0% + {{ settings.whatsapp_margin_bottom }}%);
  }
  .left-bottom{
      left:calc(0% + {{ settings.whatsapp_margin_left }}%);
      bottom:calc(0% + {{ settings.whatsapp_margin_bottom }}%);
  }
</style>
